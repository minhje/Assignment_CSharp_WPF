<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileApp"
    
    xmlns:page="clr-namespace:MobileApp.Pages"
    
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    
    Title="Contacts">

    <ShellContent Title="Contact List" Route="ListPage" ContentTemplate="{DataTemplate page:ListPage}" />
    <ShellContent Title="Add Contact" Route="AddPage" ContentTemplate="{DataTemplate page:AddPage}" />
    <ShellContent Title="Edit Contact" Route="EditPage" ContentTemplate="{DataTemplate page:EditPage}" />
    
</Shell>
